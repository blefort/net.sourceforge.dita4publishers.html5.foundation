<html5>
  <!--

    Every CSS below this marker should be easely reusable

  -->
  <!-- Core -->
  <tag>
    <name>link</name>
    <output>yes</output>
    <filename>style.css</filename>
    <prefix></prefix>
    <suffix></suffix>
    <attributes>
        <rel>stylesheet</rel>
        <type>text/css</type>
        <media>screen, projection</media>
    </attributes>
    <value></value>
    <source>
      <file path="html5-foundation/css/normalize.css" />
      <file path="html5-foundation/css/foundation.css" />
      <file path="html5-foundation/css/app.css" />
    </source>
  </tag>

  <tag>
    <name>link</name>
    <output>yes</output>
    <prefix></prefix>
    <suffix></suffix>
    <attributes>
      <rel>stylesheet</rel>
      <type>text/css</type>
      <media>screen, projection, print</media>
      <src>http://fonts.googleapis.com/css?family=Open+Sans</src>
    </attributes>
    <value></value>
  </tag>

  <tag>
    <name>script</name>
    <output>yes</output>
    <prefix></prefix>
    <suffix></suffix>
    <attributes>
      <rel>stylesheet</rel>
      <type>text/css</type>
      <media>screen, projection, print</media>
      <src>http://cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-AMS-MML_HTMLorMML</src>
    </attributes>
    <value></value>
  </tag>

  <tag>
    <name>script</name>
    <output>yes</output>
    <filename>script.js</filename>
    <prefix></prefix>
    <suffix></suffix>
    <attributes>
        <type>text/javascript</type>
    </attributes>
    <value></value>
    <source>
      <file path="html5-foundation/js/jquery.js" />
      <!--file path="themes/html5-foundation/js/modernizr.js" /-->
      <file path="html5-foundation/js/foundation.min.js" />

    </source>
  </tag>

  <!--
    external libraries, stored locally
    you could use the latest CDN instead
  -->

  <d4p>
    <init>false</init>
  </d4p>

  <class>
    <body>img-with-shadow</body>
    <navigation>grid_4 alpha omega</navigation>
    <main>
      <content>grid_8 alpha omega</content>
    </main>
    <section>
      <container>grid_12</container>
    </section>
  </class>

  <search>
    <action></action>
    <placeholder>Search the documentation...</placeholder>
    <inputs>
      <!-- add all inputs elements you want in the search form -->
    </inputs>
  </search>

</html5>
